# Application Settings
APP_NAME=InfoRUN API
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Database Configuration
# SQL Server
DATABASE_URL=mssql+pyodbc://username:password@hostname/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@hostname:5432/database

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# File Upload Settings
UPLOAD_IMAGE_DIR=uploads/images
UPLOAD_SOLUTION_DIR=uploads/solutions
UPLOAD_FILES_DIR=uploads/files
MAX_FILE_SIZE=10485760

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_LOGS=app_logs

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
